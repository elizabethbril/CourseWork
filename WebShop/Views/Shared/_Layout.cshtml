<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebShop</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
   <nav class="toppage">
       <div class="loginlink"><a href="#">Log in</a></div>
       <div class="topname">Kiev Technics</div>
   </nav>
    <table class="menu-table">
        <tr class="menu-row">
            <td class="menu-column">Laptops</td>
            <td class="menu-column">Telephones</td>
            <td class="menu-column">Tablets</td>
            <td class="menu-column">Photo-technique</td>
            <td class="menu-column">Accessories</td>
        </tr>
    </table>
    <div class="search-div">
        <form class="search-form" method="post">
            <input class="searchfield" type="text" name="name" value="" />
            <input class="search-but" type="submit" name="submit" value="" />
        </form>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - WebShop</p>
        </footer>
    </div>

</body>
</html>
