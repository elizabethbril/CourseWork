
@{
    ViewData["Title"] = "Login";
}


<div class="login-div">
    <p>Log in</p>
    <form action="/Home/Login" method="post">
        <input class="login-input" type="text" name="email" value="" placeholder="Email" />    
        <input class="login-input" type="password" name="password" value="" placeholder="Password" />
        <input class="login-but" type="submit" name="submit" value="Submit" />
        <a href="/Home/Signup">Sign up</a>

    </form>

</div>

